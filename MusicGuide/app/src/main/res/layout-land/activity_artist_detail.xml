<?xml version="1.0" encoding="utf-8"?>
<HorizontalScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        tools:context="com.makbeard.musicguide.ArtistDetailActivity">

        <ImageView
            android:id="@+id/bigcover_imageview"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:src="@drawable/placehoder_224_300" />

        <TextView
            android:id="@+id/genres_detail_tetview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/text_padding"
            android:layout_toRightOf="@id/bigcover_imageview"
            android:text="GENRES"/>

        <TextView
            android:id="@+id/albums_detail_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/text_padding"
            android:layout_toRightOf="@id/bigcover_imageview"
            android:layout_below="@id/genres_detail_tetview"
            android:text="ALBUMS"/>

        <TextView
            android:id="@+id/dot_detail_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/text_padding"
            android:layout_toRightOf="@id/albums_detail_textview"
            android:layout_alignTop="@id/albums_detail_textview"
            android:text="\u00B7"/>

        <TextView
            android:id="@+id/tracks_detail_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/text_padding"
            android:layout_alignTop="@id/albums_detail_textview"
            android:layout_toRightOf="@id/dot_detail_textview"
            android:text="TRACKS"/>

        <TextView
            android:id="@+id/biography_title_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/text_padding"
            android:layout_toRightOf="@id/bigcover_imageview"
            android:layout_below="@id/albums_detail_textview"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:text="@string/biography"/>

        <TextView
            android:id="@+id/description_detail_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/text_padding"
            android:layout_alignParentBottom="true"
            android:maxWidth="400dp"
            android:layout_toRightOf="@id/bigcover_imageview"
            android:layout_below="@id/biography_title_textview"
            android:text="DETAIL"/>

    </RelativeLayout>
</HorizontalScrollView>